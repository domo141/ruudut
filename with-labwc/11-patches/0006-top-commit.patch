+override define sh :=
+#set -x
+die () { printf '%s\n' '' "$$@" ''; exit 1; } >&2
+x () { printf '+ %s\n' "$$*" >&2; "$$@"; }
+x_eval () { printf '+ %s\n' "$$*" >&2; eval "$$*"; }
+x_exec () { printf '+ %s\n' "$$*" >&2; exec "$$@"; }
+endef
