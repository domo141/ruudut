+$(eval $(call phony_target, help ))
+$(rcp):
+	echo Commands:
+#	#set -x
+	exec awk '$$1 == "$$(eval" { C = $$4 }
+		/^\$$\(rcp.*#/ { sub(".*#",""); printf "  %-6s %s\n",C,$$0 }' \
+	$(MAKEFILE)
+
